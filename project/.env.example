# 通用設定範例，複製為 .env 後依環境調整

# Postgres 連線設定
POSTGRES_PORT_MAPPING=5432:5432
POSTGRES_UAT_PORT_MAPPING=5542:5432
POSTGRES_DB=projectdb
POSTGRES_USER=projectuser
POSTGRES_PASSWORD=projectpass

# Nginx 主機設定
SERVER_NAMES="localhost"
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
# 轉發對應 (map entry)，若無需額外 upstream 請保持 "#"
UPSTREAM_MAP_ENTRY="#"

# Django Host / CSRF
ALLOWED_HOSTS="localhost,127.0.0.1"
CSRF_TRUSTED_ORIGINS="http://localhost,http://127.0.0.1,https://localhost,https://127.0.0.1"

# Porkbun 憑證設定 (若無可留空或搭配 docker-compose.dev.yml 啟用自簽)
PORKBUN_API_KEY=
PORKBUN_API_SECRET=
PORKBUN_DOMAIN=traitty.com
PORKBUN_DISABLE_FETCH=0
DEV_CERT_VALID_DAYS=30
